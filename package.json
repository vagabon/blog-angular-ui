{
  "name": "blog-angular-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "prestart": "node env-inject.js",
    "start": "ng serve",
    "tsc": "tsc",
    "link": "npm link @ng-vagabond-lab/ng-dsv && npm start",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "serve:ssr": "node dist/blog-angular-ui/server/server.mjs",
    "test": "ng test --browsers=Chrome",
    "test:coverage": "ng test --no-watch --code-coverage --browsers=Chrome",
    "test:coverage:headless": "ng test --no-watch --code-coverage --browsers=CustomChromeHeadless",
    "sonar": "npm run test:coverage:headless && npx sonar-scanner -Dsonar.login=$SONAR_TOKEN -Dsonar.host.url=http://localhost:9000"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.2.2",
    "@angular/core": "^20.2.2",
    "@angular/forms": "^20.2.2",
    "@angular/platform-browser": "^20.2.2",
    "@angular/platform-server": "^20.2.2",
    "@angular/router": "^20.2.2",
    "@angular/ssr": "^20.2.1",
    "@ngx-translate/core": "^17.0.0",
    "express": "^5.1.0",
    "remixicon": "^4.6.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^20.2.1",
    "@angular/cli": "^20.2.1",
    "@ng-vagabond-lab/ng-dsv": "^0.0.175",
    "@types/express": "^5.0.3",
    "@types/jasmine": "~5.1.9",
    "dotenv": "^17.2.1",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "rxjs": "~7.8.2",
    "prettier": "^3.6.2",
    "sonar-scanner": "^3.1.0",
    "typescript": "~5.8.3"
  }
}
